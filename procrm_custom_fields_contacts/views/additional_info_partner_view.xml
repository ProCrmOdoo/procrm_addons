<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="partner_form" model="ir.ui.view">
        <field name="name">partner.form</field>
        <field name="model">partner</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="partner_tree" model="ir.ui.view">
        <field name="name">partner.tree</field>
        <field name="model">partner</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name" />
                <field name="description" />
            </tree>
        </field>
    </record>

    <record id="action_partner" model="ir.actions.act_window">
        <field name="name">Partner</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">partner</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="menu_partner" name="Partner" parent="crm.crm_menu_config" sequence="36" action="action_partner" />
</odoo>
