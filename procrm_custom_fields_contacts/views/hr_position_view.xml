<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="hr_position_form" model="ir.ui.view">
        <field name="name">hr.position.form</field>
        <field name="model">hr.position</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_position_tree" model="ir.ui.view">
        <field name="name">hr.position.tree</field>
        <field name="model">hr.position</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name" />
                <field name="description" />
            </tree>
        </field>
    </record>

    <record id="action_hr_position" model="ir.actions.act_window">
        <field name="name">Position</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.position</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_hr_position"
        name="Position"
        parent="hr_recruitment.menu_hr_recruitment_configuration"
        sequence="20"
        action="action_hr_position"
    />
</odoo>
