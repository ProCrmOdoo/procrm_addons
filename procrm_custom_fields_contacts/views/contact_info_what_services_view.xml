<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="what_services_form" model="ir.ui.view">
        <field name="name">what.services.form</field>
        <field name="model">what.services</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="what_services_tree" model="ir.ui.view">
        <field name="name">what.services.tree</field>
        <field name="model">what.services</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name" />
                <field name="description" />
            </tree>
        </field>
    </record>

    <record id="action_what_services" model="ir.actions.act_window">
        <field name="name">What services</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">what.services</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem
        id="menu_what_services"
        name="What services"
        parent="crm.crm_menu_config"
        sequence="31"
        action="action_what_services"
    />
</odoo>
