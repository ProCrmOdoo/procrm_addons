<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- добавляет discuss_sidebar.js и discuss.js файлы на страницу -->
    <template id="assets_backend" name="add_javascript assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <script
                type="text/javascript"
                src="procrm_custom_ui_discussion/static/src/components/discuss_sidebar.js"
            />
            <script type="text/javascript" src="procrm_custom_ui_discussion/static/src/models/discuss.js" />
            <script
                type="text/javascript"
                src="procrm_custom_ui_discussion/static/src/components/discuss_group_chat.js"
            />
            <script type="text/javascript" src="procrm_custom_ui_discussion/static/src/models/discuss_group_chat.js" />
            <script
                type="text/javascript"
                src="procrm_custom_ui_discussion/static/src/components/discuss_multi_livechat.js"
            />
            <script
                type="text/javascript"
                src="procrm_custom_ui_discussion/static/src/models/discuss_multi_livechat.js"
            />
        </xpath>
    </template>
</odoo>
