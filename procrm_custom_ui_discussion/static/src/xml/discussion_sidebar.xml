<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-inherit="mail.DiscussSidebar" t-inherit-mode="extension" owl="1">
        <!--
        добавляет кнопку свернуть-развернуть
        odoo/addons/mail/static/src/components/discuss_sidebar/discuss_sidebar.xml
        -->
        <xpath
            expr="//div[hasclass('o_DiscussSidebar_groupChannel')]/div/div[hasclass('o_DiscussSidebar_groupHeaderItemAdd')]"
            position="before"
        >
            <div class="o_DiscussSidebar_groupHeaderItem fa fa-minus" t-on-click="_triggerDiscussSidebarList" />
        </xpath>

        <!--
        добавляет аттрибут t-if к блоку что бі его скріть
        odoo/addons/mail/static/src/components/discuss_sidebar/discuss_sidebar.xml
        -->
        <xpath
            expr="//div[hasclass('o_DiscussSidebar_groupChannel')]/div[hasclass('o_DiscussSidebar_list')]"
            position="attributes"
        >
            <attribute name="t-if">discuss.isHideSidebarList</attribute>
        </xpath>
    </t>
</templates>
